/* Skills icons row styling */
.skills-icons-list {
  display: flex;
  flex-wrap: wrap;
  gap: 1.1rem;
  justify-content: center;
  align-items: center;
  margin: 1.1rem 0 1.2rem 0;
  width: 100%;
}

@media (max-width: 700px) {
  .skills-icons-list {
    gap: 0.7rem;
    justify-content: center;
    padding: 0.5rem 0.2rem;
  }
  .skill-icon img {
    height: 28px;
    border-radius: 6px;
  }
  .skill-icon {
    padding: 0.2rem 0.3rem;
    border-radius: 0.5rem;
  }
}

.skill-icon {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  border-radius: 0.7rem;
  box-shadow: 0 2px 8px rgba(44,62,80,0.10);
  padding: 0.4rem 0.7rem;
  transition: box-shadow 0.18s, transform 0.15s, background 0.18s;
}
.skill-icon:hover {
  background: linear-gradient(90deg, #fcb69f 0%, #ffecd2 100%);
  box-shadow: 0 6px 24px 0 rgba(252,182,159,0.13);
  transform: translateY(-2px) scale(1.08);
}
.skill-icon img {
  display: block;
  height: 36px;
  width: auto;
  background: transparent !important;
  border-radius: 8px;
  box-shadow: none;
  padding: 0;
}

.skill-icon img:hover {
  box-shadow: 0 2px 12px 0 rgba(255, 0, 128, 0.12);
  transform: scale(1.08);
  transition: box-shadow 0.2s, transform 0.2s;
}
